doctype html
html(lang="en")
  include pug/_head
  body
    .container
      h1 Hello Webpack
      h2(class="contsiner__subtitle") Lorem ipsum dolor sit amet consectetur adipisicing elit.
      +image('zhivotnye_kot')
      +image('gradient-beautiful-background')
      .block
      .user
      // Button trigger modal
      button.btn.btn-primary(type="button", data-bs-toggle="modal", data-bs-target="#staticBackdrop")
        | Launch static backdrop modal
      // Modal
      #staticBackdrop.modal.fade(data-bs-backdrop="static", data-bs-keyboard="false", tabindex="-1", aria-labelledby="staticBackdropLabel", aria-hidden="true")
        .modal-dialog
          .modal-content
            .modal-header
              h1#staticBackdropLabel.modal-title.fs-5 Modal title
              button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
            .modal-body
              | Modal
            .modal-footer
              button.btn.btn-secondary(type="button", data-bs-dismiss="modal") Close
              button.btn.btn-primary(type="button") Understood